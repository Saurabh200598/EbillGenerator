<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.am99m.assignment.DetailsActivity">


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorSecondary">
        <TextView
            android:id="@+id/category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Electrician"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:background="@color/colorGrey">
        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, Dec 04, 11:30 AM"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address1"
            android:layout_below="@+id/date1"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="dshg j djbgvd djbjd vdjbvjb vjdvbj jvj jvb hdf sf ufsf d bejf j  f"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/relative2"
        android:background="@color/colorGrey1">
        <ImageView
            android:id="@+id/image_view1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/job_assigned1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="job not assigned yet"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"
            android:layout_marginTop="74dp"></RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative3"
        android:background="@color/colorGrey1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/rate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.100"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null(SGST)\n\nnull(CGST)"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"/>
        <TextView
            android:id="@+id/discount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="90dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand Total"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"/>
        <TextView
            android:id="@+id/grandtotal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="120dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start time"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"/>
        <TextView
            android:id="@+id/start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End time"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"/>
        <TextView
            android:id="@+id/end1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total time"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"/>
        <TextView
            android:id="@+id/total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="210dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="240dp"/>
        <TextView
            android:id="@+id/status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="240dp"
            android:textStyle="bold"
            android:textColor="#FF2B00"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textStyle="bold"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative4"
        android:layout_marginTop="2dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service required for?"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/service1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fan, Light and Switch Repair"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:layout_marginTop="20dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="52dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where do you require the service?"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/required1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office"
                android:layout_marginLeft="8dp"
                android:textSize="17dp"
                android:layout_marginTop="20dp"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative5">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="cancel booking"
        android:background="@color/colorOrange"
        android:textColor="#FFFFFF"
        android:textSize="17dp"/>
    </RelativeLayout>





</RelativeLayout>
</ScrollView>



